<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/lbl_btn_photo"
            android:layout_width="66dp"
            android:layout_height="56dp"
            android:layout_marginStart="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="70dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_addphoto_foreground"
            android:scaleType="fitCenter" />

        <ImageView
            android:id="@+id/lbl_user_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center" />

        <ImageButton
            android:id="@+id/lbl_btn_reset"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginTop="63dp"
            android:adjustViewBounds="true"
            android:background="@drawable/ic_delete_foreground"
            android:scaleType="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#97EDEDED"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/editinfo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_edit_foreground"
                android:scaleType="fitCenter" />

            <ImageButton
                android:id="@+id/saveinfo"
                android:layout_width="54dp"
                android:layout_height="match_parent"
                android:layout_marginStart="255dp"
                android:layout_marginLeft="255dp"
                android:adjustViewBounds="true"
                android:background="@drawable/ic_save_foreground"
                android:scaleType="center"
                android:visibility="invisible"/>

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/About"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:enabled="false"
                android:focusable="false"
                android:hint="About"
                android:inputType="textMultiLine"
                android:paddingTop="10dp"
                android:textColor="@drawable/edit_text_selector" />
        </ScrollView>


    </LinearLayout>
</LinearLayout>